
@using BusinessLibrary.BO.Genre
@using Dal.Models

@inherits EditView<TEGenreBO, TEGenre>

@if (ViewModel?.Model is null)
{
    <IPSLoader />
    return;
}

@if (Error is not null)
{
    @Error
    return;
}

<IPSForm Model=ViewModel OnSaved=@(() => ItemSaved.InvokeAsync())>
    <FormFields>
        <IPSFormField Property=@ViewModel.GetProperty(() => ViewModel.Model.Name) />
            <IPSLabel>Barva</IPSLabel>
            <br/>
        <IPSColorPalette Colors=@customColorPallete @bind-Value=@ViewModel.Model.Color></IPSColorPalette>
    </FormFields>
    <FormButtons>
        <IPSFormSaveButton />
    </FormButtons>
</IPSForm>