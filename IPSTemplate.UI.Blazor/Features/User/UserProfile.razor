
@using BusinessLibrary.BO.Identity.User
@using Core.DAL.Infrastructure;
@using Dal.Models


@inherits EditView<TEUserBO, Entity>

@if (ViewModel?.Model is null)
{
    <IPSLoader />
    return;
}

@if (Error is not null)
{
    @Error
    return;
}

<IPSForm Model=ViewModel OnSaved=@(() => ItemSaved.InvokeAsync())>
    <FormFields>
        <IPSRow>
            <IPSColumn>
                <IPSFormField Property=@ViewModel.GetProperty(() => ViewModel.Model.Name) />
                <IPSDatePicker Property=@ViewModel.GetProperty(() => ViewModel.Model.DateOfBirth) />
            </IPSColumn>
            <IPSColumn>
                <IPSFormField Property=@ViewModel.GetProperty(() => ViewModel.Model.Surname) />
                <IPSFormField Property=@ViewModel.GetProperty(() => ViewModel.Model.Email) />
            </IPSColumn>
        </IPSRow>
        @*<IPSLink Class="me-auto" Link="/account/reset-password">Spremeni geslo</IPSLink>*@
    </FormFields>
    <FormButtons>
        <IPSFormSaveButton />
    </FormButtons>
</IPSForm>